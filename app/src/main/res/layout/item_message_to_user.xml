<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="@dimen/chat_message_gutter"
    android:layout_marginLeft="@dimen/chat_message_padding"
    android:layout_marginRight="@dimen/chat_message_gutter"
    android:layout_marginStart="@dimen/chat_message_padding"
    android:layout_marginTop="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/chat_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_bubble"
        android:orientation="vertical"
        android:padding="@dimen/chat_bubble_padding">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@android:color/white"
            android:textSize="@dimen/chat_bubble_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/timestamp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/chat_bubble"
        android:layout_marginLeft="@dimen/chat_bubble_padding"
        android:layout_marginStart="@dimen/chat_bubble_padding"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>